@model IEnumerable<MovieTheaterBooker.Data.Movie>

@{
    ViewData["Title"] = "Index";
}

<h1>Movies playing now</h1>

<div class="container">
    <div class="row">

        @foreach (var item in Model)
        {
            <div class="card" style="width: 18rem;">
                <img src="..." class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h5>
                    <p class="card-text">@Html.DisplayFor(modelItem => item.Genre) </p>
                    <p class="card-text">@Html.DisplayFor(modelItem => item.Duration) minutes</p>
                    <form>
                        <button class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">
                            Details
                        </button>
                    </form>
                  
                </div>
            </div>

        }
    </div>
</div>
