@model MovieTheaterBooker.Data.ScreenRelease

@{
    ViewData["Title"] = "Delete";
}

<h3>Are you sure you want to delete this screen release?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ReleaseTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReleaseTime)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <a asp-action="Details" asp-route-id=@Model.MovieId asp-controller="Movies" class="btn btn-danger">Cancel</a>
    </form>
</div>
